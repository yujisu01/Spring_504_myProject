<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.secretgarden.project.board.mapper.BoardAttachMapper">
	<insert id="insert">
		insert into tbl_attach(uuid, uploadPath, fileName, filetype, bno)
		values (#{uuid},#{uploadPath},#{fileName},#{filetype},#{bno})
	</insert>
	<delete id="delete">
		delete from tbl_attach
		where uuid=#{uuid}
	</delete>
	<select id="findByBno" resultType="com.secretgarden.project.board.domain.BoardAttachDTO">
		select *
		from tbl_attach
		where bno=#{bno}
	</select>
	<delete id="deleteAll">
		delete from tbl_attach
		where bno=#{bno}
	</delete>
	<select id="getOldFiles" resultType="com.secretgarden.project.board.domain.BoardAttachDTO">
		select *
		from tbl_attach
		where uploadpath = to_char(sysdate -1,'yyyy\mm\dd')
	</select>
	
</mapper>